@model IEnumerable<WebApplication2.Models.Product_Management>

@{
    ViewBag.Title = "Index";
}

<h2>商品管理</h2>

<p>
    @Html.ActionLink("項目追加", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.商品名)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.単価)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.販売価格)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.産地)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(model => item.ID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.商品名)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.単価)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.販売価格)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.産地)
        </td>
        <td>
            @Html.ActionLink("編集", "Edit", new { id=item.ID.Trim() }) |
            @Html.ActionLink("詳細", "Details", new { id=item.ID.Trim() }) |
            @Html.ActionLink("消去", "Delete", new { id=item.ID.Trim() })
        </td>
    </tr>
}

</table>
